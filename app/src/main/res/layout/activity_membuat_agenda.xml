<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembuatAgenda"
    android:background="#0A7BA9">

    <RelativeLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/txtlaporanharian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Agenda"
            android:textSize="20dp"
            android:fontFamily="@font/intersemibold"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/frame2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:padding="20dp"
                android:layout_marginBottom="90dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kegiatan"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:fontFamily="@font/intermedium"/>

                    <RelativeLayout
                        android:id="@+id/relative2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/spinnershape">

                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/calendar"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="18-07-2023"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/intermedium"
                            android:textColor="@color/black"
                            android:gravity="start|center"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="40dp"
                            android:layout_marginEnd="40dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginTop="360dp"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:fontFamily="@font/intermedium"/>

                    <TextView
                        android:id="@+id/statusKehadiran"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="395dp"
                        android:text="Hadir"
                        android:textSize="20dp"
                        android:fontFamily="@font/intersemibold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shapeeditext"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="270dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Jam Mulai"
                            android:textSize="18dp"
                            android:textColor="#333333"
                            android:fontFamily="@font/intermedium"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Jam Selesai"
                            android:textSize="18dp"
                            android:textColor="#333333"
                            android:fontFamily="@font/intermedium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="305dp">

                        <TextView
                            android:id="@+id/jamMulai"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/intermedium"
                            android:textColor="@color/black"
                            android:gravity="start|center"
                            android:background="@drawable/spinnershape"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/line"/>

                        <TextView
                            android:id="@+id/jamSelesai"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/intermedium"
                            android:textColor="@color/black"
                            android:gravity="start|center"
                            android:background="@drawable/spinnershape"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masuk Ke kelas"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/intermedium"/>

                    <TextView
                        android:id="@+id/Kelas"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="125dp"
                        android:background="@drawable/spinnershape"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/intermedium"
                        android:textColor="@color/black"
                        android:gravity="start|center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mata Pelajaran"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/intermedium"/>

                    <TextView
                        android:id="@+id/mataPelajaran"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="215dp"
                        android:background="@drawable/spinnershape"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/intermedium"
                        android:textColor="@color/black"
                        android:gravity="start|center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kompetensi Dasar"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:layout_marginTop="450dp"
                        android:fontFamily="@font/intermedium"/>

                    <EditText
                        android:id="@+id/kompetensiDasar"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="485dp"
                        android:gravity="start"
                        android:padding="15dp"
                        android:background="@drawable/spinnershape"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kegiatan Pembelajaran"
                        android:textSize="18dp"
                        android:textColor="#333333"
                        android:layout_marginTop="600dp"
                        android:fontFamily="@font/intermedium"/>

                    <EditText
                        android:id="@+id/kegiatanPembelajaran"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="635dp"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="15dp"
                        android:background="@drawable/spinnershape"/>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/optionsLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Batal"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shapebuttonbatal"
                android:textAllCaps="false"
                android:fontFamily="@font/intermedium"
                android:layout_marginLeft="30dp"/>

            <Button
                android:id="@+id/button_simpan"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shapebuttonsimpan"
                android:gravity="center"
                android:text="Simpan"
                android:elevation="5dp"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:layout_marginRight="30dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/intersemibold"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>